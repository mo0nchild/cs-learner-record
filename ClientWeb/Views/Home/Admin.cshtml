@using System.Security.Claims

@model ClientWeb.Models.User

@{
    ViewData["Title"] = "Администратор";
}
@section Header {
    <nav class="navbar">
        <a class="navbar-brand" href="#">
            <img src="~/vstu-logo.svg" width="52" height="72">
        </a>
        <a class="navbar-account" asp-controller="Home" asp-action="Admin">
            Личный кабинет
        </a>
        <a class="navbar-account" asp-controller="Users" asp-action="Index">
            Все пользователи
        </a>
    </nav>
}
<div>
    <h2>Страница администратора</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Login)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Login)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
    </dl>
</div>
<div class="back-btn">
    <a asp-action="Logout" asp-controller="Account">Выйти из аккаунта</a>
</div>