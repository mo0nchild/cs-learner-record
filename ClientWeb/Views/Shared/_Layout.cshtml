<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/webApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="icon" type="image/svg" href="~/vstu-logo.svg" />
</head>
<body style="background-color: #3B4762;">
    <header>
        @this.RenderSection("Header", false)
    </header>

    @if (IsSectionDefined("nav"))
    {
        @RenderSection("nav")
    }
    <div class="container" style="flex-grow: 1">
        <main role="main" class="mt-5 h-100" style="margin-bottom: 100px;"> @RenderBody() </main>
    </div>
    
    <footer class="mt-2" id="page-footer">
        <div class="footer_section">
            <div class="footer_sec"></div>
            <div class="footer_logo">
                <img src="./img/logo_1.svg" alt="">
            </div>
            <div class="footer_title">
                <p>ВГТУ</p>
                <div class="footer_divider"></div>
                <div class="footer_portal_title">
                    <p>ОБРАЗОВАТЕЛЬНЫЙ ПОРТАЛ ВОРОНЕЖСКОГО ГОСУДАРСТВЕННОГО ТЕХНИЧЕСКОГО УНИВЕРСИТЕТА</p>
                </div>
            </div>
            <div class="footer_contacts">
                <h3>Приемная комиссия</h3>
                <a href="#">ул. 20-летия Октября, 84</a>
                <a href="#">+7 (473) 271-53-15</a>
                <a href="#">Московский проспект, 14</a>
                <a href="#">+7 (473) 246-40-67</a>
                <a href="#">priem@vgasu.vrn.ru</a>
                <a href="#">priem_vgtu</a>
            </div>
            <div class="footer_contacts">
                <h3>Администрация</h3>
                <a href="#">ул. 20-летия Октября, 84</a>
                <a href="#">+7 (473) 207-22-20</a>
                <a href="#">rector@cchgeu.ru</a>
                <a href="#">rector@vorstu.ru</a>
                <a href="#">rector@vgasu.vrn.ru</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
